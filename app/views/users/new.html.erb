<%= form_for @user do |f| %>
  <div class="form-group">
    <%= f.label :name  %>
    <%= f.text_field :name, class: "form-control" %>
  </div>
  <div class="form-group">
    <%= f.label :height, value="Height (in inches)" %>
    <%= f.number_field :height, class: "form-control"  %>
  </div>

  <div class="form-group">
    <%= f.label :happiness, value= "How happy are you? (1-5 scale)" %>
    <%= f.number_field :happiness, class: "form-control"  %>
  </div>

  <div class="form-group">
    <%= f.label :nausea, value= "How nauseous are you? (1-5 scale)" %>
    <%= f.number_field :nausea, class: "form-control"  %>
  </div>

  <div class="form-group">
    <%= f.label :tickets, value= "How many dollars are in your pocket?" %>
    <%= f.number_field :tickets, class: "form-control"  %>
  </div>

  <div class="form-group">
    <%= f.label :admin, value= "Check box if you are a theme park owner" %>
    <%= f.check_box :admin %>
  </div>

  <div class="form-group">
    <%= f.label :password, value= "Password" %>
    <%= f.password_field :password, placeholder: "Enter a good one", class: "form-control"  %>
  </div>

  <div class="actions">
  <%= f.submit "Create User", class: "btn btn-primary" %>
  </div>

<% end %>
