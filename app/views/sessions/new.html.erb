<h1>Login</h1>

<%= form_tag '/signin' do %>

  <%= label_tag 'Name'  %>
  <%= select_tag 'user_name', options_from_collection_for_select(@users, 'name', 'name') %>

  <%= label_tag 'Password' %>
  Password: <%= password_field_tag :password %>

  <%= submit_tag %>

<%end%>

<%= link_to "Sign Up", new_user_path%>
