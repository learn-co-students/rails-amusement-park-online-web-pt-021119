<% if !@user.errors.empty?%>
	<ul>
		<% @user.errors.full_messages.each do |error|%>
			<li><%= error %></li>
		<% end %>
	</ul>
<% end %>

<%= form_for(@user) do |f|%>
	<%= f.label :name, "Name" %>
	<%= f.text_field :name, class: 'form-control'%>
	<%= f.label :height, "Height (in inches)" %>
	<%= f.text_field :height, class: 'form-control'%>
	<%= f.label :happiness, "How happy are you? (1-5 scale)" %>
	<%= f.text_field :happiness, class: 'form-control'%>
	<%= f.label :nausea, "How nauseous are you? (1-5 scale)" %>
	<%= f.text_field :nausea, class: 'form-control'%>
	<%= f.label :tickets, "How many dollars are in your pocket?" %>
	<%= f.text_field :tickets, class: 'form-control'%>
	<%= f.label :admin, "Check box if you are a theme park owner" %>
	<%= f.check_box :admin, class: 'form-check-input'%> <br><br>
	<%= f.label :password, "Password" %>
	<%= f.password_field :password, class: 'form-control'%><br><br>
	<%= f.submit class: 'btn btn-primary'%>
<% end %>