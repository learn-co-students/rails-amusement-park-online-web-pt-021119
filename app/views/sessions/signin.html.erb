<% if flash[:error] %>
	<%= flash[:error] %>
<% end %>

<%= form_for(@user, url: '/signin') do |f|%>
	<div class='form-group'>
		<%= f.label "Your name: " %>
		<%= f.collection_select :id, User.all, :id, :name, prompt: "Please select your username from this dropdown"%>
	</div>
	<div class='form-group'>
		<%= f.label "Your password: " %>
		<%= f.password_field :password, class:'form-control'%>
	</div>
	<%= f.submit "Sign In" %>
<% end %>


