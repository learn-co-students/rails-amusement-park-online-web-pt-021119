<h1>New attraction</h1>

<%= form_for @attraction do |f| %>
  <div class="form-group">
    <%= f.label :name  %>
    <%= f.text_field :name, class: "form-control" %>
  </div>
  <div class="form-group">
    <%= f.label :height, value="Height Requirement (in inches)" %>
    <%= f.number_field :min_height, class: "form-control"  %>
  </div>

  <div class="form-group">
    <%= f.label :happiness, value= "How fun is it? (1-5 scale)" %>
    <%= f.number_field :happiness_rating, class: "form-control"  %>
  </div>

  <div class="form-group">
    <%= f.label :nausea, value= "How nausea-inducing is it? (1-5 scale)" %>
    <%= f.number_field :nausea_rating, class: "form-control"  %>
  </div>

  <div class="form-group">
    <%= f.label :tickets, value= "How many tickets does it cost?" %>
    <%= f.number_field :tickets, class: "form-control"  %>
  </div>

  <div class="actions">
  <%= f.submit "Create Attraction", class: "btn btn-primary" %>
  </div>

<% end %>
